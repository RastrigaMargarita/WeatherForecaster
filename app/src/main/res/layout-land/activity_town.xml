<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.margretcraft.weatherforecaster.TownActivity">

    <EditText
        android:id="@+id/textViewTown"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:background="@drawable/sky"
        android:hint="@string/search"
        android:inputType="text"
        android:padding="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonSearchTown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/ListViewTown"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTown" />

    <ImageButton
        android:id="@+id/buttonSearchTown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:clickable="true"
        android:contentDescription="@string/search_town"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/textViewTown"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/glass" />
</androidx.constraintlayout.widget.ConstraintLayout>